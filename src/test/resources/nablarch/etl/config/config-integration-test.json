{
  "inputFileBasePath": "base/input",
  "outputFileBasePath": "base/output",
  "sqlLoaderControlFileBasePath": "base/control",
  "sqlLoaderOutputFileBasePath": "base/log",
  "jobs":
  {
    "job1":
    {
      "steps":
      {
        "truncate":
        {
          "type": "truncate",
          "entities": [
            "nablarch.etl.config.app.TestDto",
            "nablarch.etl.config.app.TestDto3"
          ]
        },
        "step1":
        {
          "type": "file2db",
          "bean": "nablarch.etl.config.app.TestDto",
          "fileName": "test-input.csv"
        },
        "validationStep": {
          "type": "validation",
          "bean": "nablarch.etl.config.app.TestDto",
          "errorEntity": "nablarch.etl.config.app.TestDtoErrorEntity",
          "mode": "ABORT",
          "errorLimit": 100
        },
          "step2":
          {
            "type": "db2db",
            "bean": "nablarch.etl.config.app.TestDto2",
            "sqlId": "SELECT_TEST2",
            "mergeOnColumns": ["test21", "test22", "test23"],
            "updateSize": {
              "size": 200000,
              "bean": "nablarch.etl.config.app.TestDto3"
            },
            "insertMode": "ORACLE_DIRECT_PATH"
          },
        "step3":
        {
          "type": "db2file",
          "bean": "nablarch.etl.config.app.TestDto3",
          "sqlId": "SELECT_TEST3",
          "fileName": "test-output.csv"
        }
      }
    }
  }
}
